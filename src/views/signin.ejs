<%- layout('layouts/main.ejs') %>

    <div class="box">
        <form action="/signin" method="POST">
            <h3>UniChat</h3>
            <div class="box-input">
                <input type="text" name="name" required="required">
                <span>Nombre de Usuario</span>
                <i></i>

            </div>
            <div class="box-input">
                <input type="email" name="email" required="required">
                <span>Correo electrónico</span>
                <i></i>

            </div>
            <div class="box-input">
                <input type="password" name="password" id=""
                    required="required">
                <span>Contraseña</span>
                <i></i>
            </div>
            <div class="links">
                <a href="#">¿Ya tienes cuenta?, Inicia Sesión</a>
            </div>
            <button type="submit">
                Registrarse
            </button>
        </form>
    </div>
    <div class="banner-img">
        <img src="email.png" alt="">
    </div>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Signika+Negative:wght@300;400;500;600;700&display=swap');


*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Signika Negative', sans-serif;
}
body{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color:#8e8ca3;
    min-height: 100vh;
}
.box{
    position: relative;
    width: 380px;
    height: 450px;
    overflow: hidden;
    background-color: #562155;
    border-radius: 8px;
}

.box::before{
    content: "";
    width: 380px;
    height: 420px;
    left: -50%;
    top: -50%;
    position: absolute;
    background: linear-gradient(0deg,transparent,transparent,#fff,#fff,#fff);
    z-index:1;
    transform-origin: bottom right;
    animation: animated 6s linear infinite;
}
.box::after{
    content: "";
    width: 380px;
    height: 420px;
    left: -50%;
    top: -50%;
    overflow: hidden;
    position: absolute;
    background: linear-gradient(0deg,transparent,transparent,#fff,#fff,#fff);
    z-index:1;
    transform-origin: bottom right;
    animation: animated 6s linear infinite;
    animation-delay: -3s;
}
@keyframes animated{
    0%{
        transform:rotate(0deg)
    }
    100%{
        transform: rotate(360deg);
    }
}
.box form{
    position: absolute;
    inset: 4px;
    background-color: #c5f7f0;
    padding: 50px 40px;
    border-radius: 8px;
    display: flex;
    z-index: 2;
    flex-direction: column;
}
.box form h3{
    color: #562155;
    font-weight: 800;
    letter-spacing: 0.1rem;
    text-align: center;
}
.box form .box-input input{
    border: none;
    position: relative;
    width: 100%;
    padding: 20px 10px 10px;
    outline: none;
    box-shadow: none;
    background: transparent;
    letter-spacing:0.05em;
    z-index: 10;
    transition: 0.5s;
    font-size: 1em;
    color: #fff;
}
.box form .box-input{
    position: relative;
    width: 300px;
    margin-top: 30px;
}
.box form .box-input span{
    font-size: 1em;
    letter-spacing:0.05em;
    transition: 0.5s;
    position: absolute;
    left: 0;
    padding: 20px 10px 10px;
    color: #8e8ca3;
    pointer-events: none;
}


.box form .box-input input:valid ~ span,

.box form .box-input input:focus ~ span
{
    color: #8e8ca3;
    font-size: 0.75em;
    transform: translateY(-34px);
}
.box form .box-input i{
    pointer-events: none;
    position: absolute;
    transition: 0.5s;
    left: 0;
    border-radius: 8px;
    bottom: 0;
    width: 100%;
    height: 2px;
    background:#72577c;
    overflow: hidden;  
}


.box form .box-input input:valid ~ i,

.box form .box-input input:focus ~ i
{
    height: 48px;
}
.box form .links{
    justify-content:space-between;
    display: flex;
}
.box form .links a{
    color: #fff;
    margin: 10px 0;
    background-image: linear-gradient(90deg,#562155,#72577c,#FFF);
    background-repeat: no-repeat;
    background-size: 0% 2px;
    background-position: left bottom;
    transition:background-size 700ms ease-in-out;
    text-decoration: none;
    font-size: 0.75em;
}

.box form .links a:hover,
.box form .links a:nth-child(2)
{
    color: #562155;
    background-size: 100% 2px;
}

.box form button[type="submit"]{
    border: none;
    margin-top: 10px;
    font-weight:600;
    width: 140px;
    cursor: pointer;
    background: #72577c;
    font-size: 0.9em;
    padding: 9px 25px;
    border-radius: 4px;
    color: #fff;
}
.box form button[type="submit"]:active{
    opacity: 0.8;

}
.banner-img img{
    width: 650px;
    display: block;
}
.banner-img{
    animation: move 3.5s linear infinite;
}
@keyframes move{
    0%{
        transform: translateY(0);
    }
    50%{
        transform: translateY(30px);
    }
    100%{
        transform: translateY(0);
    }
}



</style>